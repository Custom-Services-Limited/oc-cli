{
    "name": "custom-services-limited/oc-cli",
    "description": "Command line interface for OpenCart - Created by Custom Services Limited",
    "type": "project",
    "keywords": ["opencart", "cli", "command-line", "ecommerce"],
    "homepage": "https://github.com/Custom-Services-Limited/oc-cli",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Custom Services Limited",
            "email": "info@opencartgreece.gr",
            "homepage": "https://support.opencartgreece.gr/"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "symfony/console": "^4.4|^5.4",
        "symfony/yaml": "^4.4|^5.4",
        "symfony/filesystem": "^4.4|^5.4",
        "symfony/service-contracts": "^2.5",
        "psr/container": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5|^7.0|^8.0|^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^0.12|^1.0",
        "symfony/process": "^4.4|^5.4"
    },
    "autoload": {
        "psr-4": {
            "OpenCart\\CLI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenCart\\CLI\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/oc"
    ],
    "config": {
        "platform": {
            "php": "7.3.0"
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test:unit": "./vendor/bin/phpunit tests/Unit",
        "test:integration": "./vendor/bin/phpunit tests/Integration",
        "test:coverage": "./vendor/bin/phpunit --coverage-html build/coverage",
        "test:ci": "./vendor/bin/phpunit --coverage-clover build/clover.xml",
        "cs-check": "./vendor/bin/phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "./vendor/bin/phpcbf --standard=PSR12 src/ tests/",
        "analyze": "./vendor/bin/phpstan analyse src/",
        "build:phar": [
            "@php -d phar.readonly=0 box.phar compile --config=box.json"
        ],
        "ready-for-deploy": [
            "./vendor/bin/phpunit",
            "./vendor/bin/phpcbf --standard=PSR12 src/ tests/",
            "./vendor/bin/phpcs --standard=PSR12 src/ tests/",
            "./vendor/bin/phpstan analyse src/"
        ]
    }
}
